<%- include('../partials/header'); %>

    <body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar" data-open="click" data-menu="vertical-menu" data-color="bg-chartbg" data-col="2-columns">
        <%- include('../partials/nav'); %>
            <%- include('../partials/left'); %>


          
    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-body">
                <div class="blocks userDetails">
                    <div class="userIcon">
                        <img src="/assets/images/ic_task.png" class="img-fluid" alt="" />
                    </div>
                    <div class="details">
                    <h4 class="m-0">Task</h4>
                    <p class="m-0">Here You Can Create And Assign New Tasks Or Edit An Existing Task</p>
                    </div>
                   
                </div>

                <div class="blocks tabContainers mb-0">
                    <div class="d-flex align-items-start">


                        <div class="productivityContainer taskTable flex-fill">
                            <div class="table-responsive">
                                <table id="zero_config" class="table table-striped table-bordered no-wrap">
                                    <thead>
                                        <tr>
                                            <th>Title </th>
                                            <th>Project</th>
                                            <th>Created By</th>
                                            <th>Assigned To</th>
                                            <th>Created</th>
                                            <th>Due Date</th>
                                            <th>Priority</th>
                                            <th>Status</th>
                                          
                                        </tr>
                                    </thead>
                                    <tbody> 
                                        <%  if(companytask.data.length > 0){
                                            var s=1; 
                       for(var i=0; i < companytask.data.length; i++) { %>
                                           <tr>
                                        <tr>
                                            <td><a href="<%= process.env.APP_URL %>/taskview/<%= companytask.data[i].id; %>"><%= companytask.data[i].name; %></a></td>
                                            <td><%= companytask.data[i].project.name; %></td>
                                            <td><%= companytask.data[i].user.firstname; %> <%= companytask.data[i].user.lastname; %></td>
                                            <td> <ul class="assignList"><%  var sstr=companytask.data[i].assignmultipleuser;
                                                var stringarray= sstr.split(',');   
                                                                                        
                                            if(companytask.getuse.length > 0){
                                                                   
                                           for(var s=0; s < 5; s++) {
                           var ssss=stringarray.includes(companytask.getuse[s].id);
                           
                           
                                                   if(ssss==false){ %>
                                                       <% var srr=companytask.getuse[s].firstname; 
                                                       var snerr=companytask.getuse[s].lastname; 
                                                       var res = srr.substring(0, 1); var nres = snerr.substring(0, 1);  %> <li><%=res; %> <%=nres; %></li>
                            <% } }  %>
                                                      <li><%= companytask.getuse.length; %>+</li> 
                                                      <% } %>        
                                                               </ul>
                                                           </li>
                                                       </ul>
                                                       
                                                       </td>
                                           
                    <td> <%=  moment(companytask.data[i].startdate).format('DD-MM-YYYY');  %></td>
                    <td> <%=  moment(companytask.data[i].enddate).format('DD-MM-YYYY');  %></td>
                                          
                    <td><%= companytask.data[i].priority; %></td>
                                            <td><span class="alert alert-success">In Process</span></td>
                                            
                                        </tr>
                                        <% } }else{ %>
                                            <tr>
                                            <td class="text-center" colspan="4" style="color:red; ">
                                               No Task Listed Yet
                                             </td>
                                            </tr>
                                            <% }  %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
