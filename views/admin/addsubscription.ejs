                    <script>
                      $(document).ready(function () {
                        $("#txt_search").keyup(function () {
                          $(".invoicetable").hide();
                          var search = $(this).val();
                          if (search != "") {
                            var data = {};
                            data.search = search;

                            $.ajax({
                              url: '/api/users/getSearch',
                              method: 'post',
                              data: JSON.stringify(data),
                              contentType: 'application/json',
                              success: function (response) {
                                console.log(response.data);

                                var len = response.data.length;
                                $("#searchResult").empty();
                                for (var i = 0; i < len; i++) {
                                  var id = response.data[i]['id'];
                                  var name = response.data[i]['companyname'];
                                  $("#searchResult").append("<li value='" + id + "'>" + name + "</li>");
                                }

                                // binding click event to li
                                $("#searchResult li").bind("click", function () {
                                  setText(this);

                                });

                              }
                            });
                          }

                        });

                      });

                      // Set Text to search box and get details
                      function setText(element) {

                        var value = $(element).text();
                        var userid = $(element).val();

                        $("#txt_search").val(value);
                        $("#searchResult").empty();
                        var data = {};
                        data.userid = userid;
                        // Request User Details
                        $.ajax({
                          url: '/api/users/getDetail',
                          method: 'post',
                          contentType: 'application/json',
                          data: JSON.stringify(data),
                          success: function (response) {
                            var len = response.data.length;

                            if (len > 0) {
                              var email = response.data[0]['email'];
                              var address = response.data[0]['address'];
                              var zipcode = response.data[0]['zipcode'];
                              var mobile = response.data[0]['mobile'];
                              var id = response.data[0]['id'];
                              $("#email").val(email);
                              $("#address").val(address);
                              $("#zipcode").val(zipcode);
                              $("#mobile").val(mobile);
                              $("#uid").val(id);
                            }
                            subscription(element);
                          }

                        });
                      }
                      // Set Text to search box and get details
                      function subscription(element) {


                        var userid = $(element).val();
                        $("#searchResult").empty();
                        var data = {};
                        data.userid = userid;
                        // Request User Details
                        $.ajax({
                          url: '/api/users/getsubscription',
                          method: 'post',
                          contentType: 'application/json',
                          data: JSON.stringify(data),
                          success: function (response) {
                            var len = response.data.length;

                            if (len > 0) {
                              $("#txt_search").val('');
                              $(".invoicetable").show();
                              $("#email").val('');
                              $("#address").val('');
                              $("#zipcode").val('');
                              $("#mobile").val('');
                              $("#uid").val('');
                            }
                          }

                        });
                      }
