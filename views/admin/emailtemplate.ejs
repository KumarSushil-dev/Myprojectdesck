<%- include('../partials/header'); %>

    <body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar" data-open="click" data-menu="vertical-menu" data-color="bg-chartbg" data-col="2-columns">
        <%- include('../partials/nav'); %>
        <%- include('../partials/left'); %>
                <div class="app-content content">
                    <div class="content-wrapper">
                        <!--
                        <div class="content-wrapper-before"></div>-->
                        <div class="content-header row">
                        </div>
                        <div class="content-body">
                       <!-- Table head options start -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h4 class="card-title">Listed Emailtemplate </h4>
                                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                                            <div class="heading-elements">
                                                <ul class="list-inline mb-0">
                                                    <li> <a type="button" href="/emailtemplateadd" class="btn btn-outline-primary btn-min-width btn-glow mr-1 mb-1"><i class="la la-plus"></i> Add Emailtemplate
                                                    </a></li>
                                                </ul>
                                               
                                            </div>
                                          
                                        </div>
                                        <div class="card-content collapse show">
                                            <div class="card-body">
                                                <% if (locals.messages) { %>
                                                    <div class="alert alert__success " style="color:red; ">
                                                        <%= messages.error %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <div class="table-responsive">

                                                <table class="table">
                                                    <thead class="thead-dark">
                                                        <tr>
                                                            <th scope="col">#</th>
                                                            <th scope="col">Title</th>
                                                            <th scope="col">Subject</th>
                                                        
                                                            <th scope="col">Description</th>
                                                            <th scope="col">Status</th>
                                                            <th scope="col">Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                        <%  if(emailtemplate.data.length > 0){
                                                             var s=1; 
                                        for(var i=0; i < emailtemplate.data.length; i++) { %>
                                                            <tr>
                                                 <th scope="row"><%= s++; %></th>
                                             <td><%= emailtemplate.data[i].title; %></td>
                                             
                                             <td><%= emailtemplate.data[i].subject; %></td>
                                             <td>View Template</td>
                                            
<td>
    <% if(emailtemplate.data[i].status=="Y"){  %>
        <a  href="<%= process.env.APP_URL %>/emailtemplateupdatestatus/<%= emailtemplate.data[i].id %>/N" onclick="return confirm('Do you really want to inactive this emailtemplate?');" title="InActivate emailtemplate?" style="color:rgb(224, 35, 44)" > <i style="color:green" class="la la-toggle-on"></i></a>
        
        <% }else{ %>
           <a  href="<%= process.env.APP_URL %>/emailtemplateupdatestatus/<%= emailtemplate.data[i].id %>/Y" onclick="return confirm('Do you really want to activate this emailtemplate?');" title="Activate emailtemplate?" style="color:rgb(224, 35, 44)" ><i style="color:red" class="la la-toggle-off "></i></a>
            <% } %>
          </td>
        <td> 
            <a onclick="spinner()" href="<%= process.env.APP_URL %>/emailtemplateedit/<%= emailtemplate.data[i].id %>" title="Edit Emailtemplate" style="color:rgb(41, 211, 19)" ><i style="color:red" class="la la-edit"></i></a>
            <a  href="<%= process.env.APP_URL %>/emailtemplateupdatedelete/<%= emailtemplate.data[i].id %>" onclick="return confirm('Do you really want to delete this emailtemplate?');" title="Delete emailtemplate?" style="color:rgba(207, 112, 117, 0.842)" > <i style="color:red" class="la la-trash-o"></i></a>   

    </td>
           </tr>
<% } }else{ %>
<tr>
<td class="text-center" colspan="4" style="color:red; ">
   No Email Template Listed Yet
 </td>
</tr>
<% }  %>


                                                    </tbody>
                                                </table>




                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Table head options end -->
                        </div>
                    </div>
                </div>
                <!-- ////////////////////////////////////////////////////////////////////////////-->






          
                <%- include('../partials/footer'); %>